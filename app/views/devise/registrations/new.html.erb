<!DOCTYPE html>
<html lang='en'>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :user_name, class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= f.text_field :user_name, class: "form-control",autofocus: true, :required => true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= f.email_field :email, class: "form-control", :required => true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :required => true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <br><br><br>
          <b>Already have an account? </b>
          <%= link_to "Sign in", new_session_path(resource_name) %><br />
        </div>
      </div>

  <% end %>
</html>