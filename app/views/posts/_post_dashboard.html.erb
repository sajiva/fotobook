<div align="center">

  <% @posts.each do |post| %>
      <%= link_to post.user.user_name, profile_path(post.user.user_name) %><br>
      <%= render :partial => 'post', :locals => {:post => post} %>
      <hr>
  <% end %>

  <% if !@posts.any? %>
    <h4 style="color: cadetblue">Welcome to fotobook!</h4><br><br>
      Share your photos by creating a new post!<br><br>
      Browse what other users have shared!
  <% end %>

</div>