<div align="center">

  <b>Edit Post</b><br>

  <%= image_tag @post.image.url(:medium) %><br>

  <%= form_for @post, :html => {:multipart => true} do |form| %>
      <%= form.label :caption %><br>
      <%= form.text_area :caption, size: "100" %><br>
      <%= form.submit %>
  <% end %>
  <br>

  <%= link_to 'Delete Post', post_path(@post), method: 'delete', data: { confirm: "Are you sure you want to delete this post?"}  %>
  <%= link_to 'Cancel', post_path(@post), method: 'get' %>

</div>